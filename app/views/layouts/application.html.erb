<!DOCTYPE html>
<html>
  <head>
    <title>RailsSimpleAirbnb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar-lewagon">
      <div>
        <%= link_to flats_path do %>
          <h1 style="padding:4px 8px;">Simple Airbnb</h1>
        <% end %>
      </div>
      <div>
        <form class="form-inline">
          <input type="search" name="query" placeholder="Search" value="<%= params[:query] %>" class="form-control">
          <button type="submit" class="btn btn-success">Search</button>
        </form>
        <%= link_to "Add Flat", new_flat_path, class: "btn btn-primary" %>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
